{
  "compilerOptions": {
    "target": "es5",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "no-console": true,
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-trailing-whitespace": [
      true,
      "ignore-comments"
    ],
    "max-line-length": [
      true,
      110
    ],
    "eofline": true,
    "indent": [
      true,
      "tabs",
      2
    ],
  },
}